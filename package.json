{
  "name": "@metahub/karma-postcss-preprocessor",
  "description": "Karma preprocessor to compile css files with postcss with sourcemap and watch support",
  "version": "0.0.0-development",
  "author": "Pierre Vanduynslager",
  "bugs": {
    "url": "https://github.com/vanduynslagerp/karma-postcss-preprocessor/issues"
  },
  "config": {
    "commitizen": {
      "path": "@metahub/cz-conventional-commit"
    }
  },
  "dependencies": {
    "chokidar": "^1.7.0",
    "lodash": "^4.17.4",
    "minimatch": "^3.0.4",
    "nodeify": "^1.0.1",
    "source-map-url": "^0.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.0.1",
    "@commitlint/config-angular": "^4.3.0",
    "@metahub/cz-conventional-commit": "^2.0.0",
    "@metahub/karma-jasmine-jquery": "^1.0.0",
    "ava": "^0.23.0",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-metahub": "^1.2.1",
    "cssnano": "^3.10.0",
    "eslint": "^4.3.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-pretty": "^2.1.1",
    "eslint-plugin-ava": "^4.2.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jasmine": "^2.8.2",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "fs-extra": "^4.0.0",
    "jasmine-core": "^2.7.0",
    "jasmine-jquery": "^2.1.1",
    "karma": "^1.7.0",
    "karma-babel-preprocessor": "^7.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "nyc": "^11.0.3",
    "p-event": "^1.3.0",
    "pify": "^3.0.0",
    "postcss": "^6.0.8",
    "postcss-import": "^11.0.0",
    "postcss-mixins": "^6.0.1",
    "postcss-scss": "^1.0.2",
    "postcss-simple-vars": "^4.0.0",
    "prettier": "^1.7.2",
    "proxyquire": "^1.8.0",
    "rimraf": "^2.6.1",
    "semantic-release": "^8.0.0",
    "sinon": "^4.0.0",
    "sr-commit-analyzer": "^2.0.2",
    "sr-release-notes-generator": "^1.1.2",
    "tempy": "^0.2.0"
  },
  "engines": {
    "node": ">=4"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/vanduynslagerp/karma-postcss-preprocessor#readme",
  "keywords": [
    "karma-plugin",
    "karma-preprocessor",
    "postcss",
    "sourcemaps",
    "watcher"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "nyc": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "lib/*.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "peerDependencies": {
    "karma": "*",
    "postcss": "*"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "analyzeCommits": {
      "path": "sr-commit-analyzer",
      "preset": "metahub",
      "releaseRules": "conventional-changelog-metahub/release-rules"
    },
    "generateNotes": {
      "path": "sr-release-notes-generator",
      "preset": "metahub"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vanduynslagerp/karma-postcss-preprocessor.git"
  },
  "scripts": {
    "clean": "rimraf rimraf coverage && rimraf .nyc_output",
    "cm": "git-cz",
    "codecov": "codecov",
    "commitmsg": "commitlint -e",
    "compile": "rimraf lib && babel src --source-maps --out-dir lib",
    "coverage": "nyc check-coverage",
    "lint": "eslint src test package.json",
    "prepublishOnly": "npm run compile",
    "pretest": "npm run clean && npm run compile && npm run lint",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "nyc ava -v"
  }
}
